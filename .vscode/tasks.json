{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run_QEMU",
            "type": "shell",
            "command": "./run_qemu_gdb.sh",
            // "command": "bash run.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Run QEMU virtual machine",
            "isBackground": true,
            "problemMatcher": {
                "owner": "GDB",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "(.*)$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern":{
                        "regexp": "Checking necessary files.*"
                    },
                    "endsPattern":{
                        "regexp": "Running QEMU with GDB.*"
                    }
                },
            }
        },
        {
            "type": "shell",
            "command": "./build.sh run",
            "group": {
                    "kind": "build",
                    "isDefault": true
            },
            "problemMatcher": [],
            "label": "run_qemu",
            "detail": "run qemu",
            "isBackground": true
        },
    ]
}
